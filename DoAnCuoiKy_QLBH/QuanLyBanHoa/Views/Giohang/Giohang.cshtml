@using QuanLyBanHoa.Models;
@model List<GioHang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="color:#0094ff;padding-bottom:4px; text-align:center;background:#ffffff"><b> THÔNG TIN ĐẶT HÀNG </b> </h2>

<table border="0">
    <tr style="background:#000000; height:40px;color:#ffffff;text-align:center;font-size:16px">
        <th colspan="2">Mã hoa</th>
        <th></th>
        <th></th>
        <th>Tên hoa</th>
        <th>Hình ảnh</th>
        <th>Số lượng</th>
        <th>Ðơn giá</th>
        <th>
        </th>
        <th colspan="2">Thành tiền</th>
       <th colspan="1"></th>
        <th colspan="2"></th>
        <th colspan="1"></th>
        <th colspan="3"></th>
        <th colspan="3"></th>
        <th colspan="3"></th>
        <th colspan="3"></th>
        <th></th>
        
    </tr>
    @foreach (var item in Model)
    {
        <tr style="font-weight:bold">
            <td colspan="2"> @item.sMahoa </td>
            <td></td>
            <td></td>
            <td> @item.sTenhoa</td>
            <td><img src="~/Images/@item.sHinhAnh" width="220" height="250"></td>
            @using (Html.BeginForm("Capnhatgiohang", "Giohang", new { @masp = item.sMahoa}))
            {
                <td>
                    <input type="number" min="1" name="txtSoluong" value="@item.iSoluong" style="background-color:#ffffff"/>
                </td>
                <td>@String.Format("{0:0,0}", item.iDonGia)</td>
                <td></td>
                <td colspan="2"> @String.Format("{0:0,0}",item.ithanhTien) VNĐ</td>
                <td></td>
                <td></td>
                 <td></td>
                <td></td>
                <td colspan="1"><a href="@Url.Action("ChiTietGH", "Giohang", new { id = item.sMahoa})" style="text-decoration:none"> Chi tiết</a></td>
                <td></td>
                <td></td>
                 <td></td>
                <td></td>
                <td colspan="2"><a href="@Url.Action("XoaMotSP", new { @masp = item.sMahoa})" style="text-decoration:none">Xóa</a></td>
               <td colspan="1"></td>
                 <td></td>
                <td></td>
                 <td></td>
                <td></td>
                 <td><input type ="submit" value ="Cập Nhật"/></td>
               
            }
        </tr>
    }
</table>
<div class="row">
    <div class="col-lg-5"></div>
    <div class="col-lg-2" style="font-weight: bold; font-size:14px">
             Số lượng sách: @ViewBag.TongSoLuong</a>
         </div>
    <div class="col-lg-2"></div>
        <div class="col-lg-2" style="font-weight:bold; font-size:14px">
        Tổng tiền: @String.Format("{0:0,0}",ViewBag.Tongtien) VNÐ
    </div>
    
</div>
<br />
<div class="row">
    <div class="col-lg-5"></div>
        <div class="col-lg-3">
          <button type="submit" class="ha"> <a href="@Url.Action("XoaGiohang")" style="text-decoration:none;color:black;font-weight:bold; font-size:16px">Xóa tất cả giỏ hàng</a></button>
            </div>
    <div class="col-lg-1"></div>
        <div class="col-lg-2">
         <button type="submit"><a  href="@Url.Action("Dathang","Giohang")" style="text-decoration:none;color:black;font-weight:bold; font-size:16px">Thanh toán</a></button>
    </div>

</div>
    

