@{
    Layout = null;
    }
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Đăng nhập</title>
    <link href="~/Content/themes/CSS/Login_Logout.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        <div class="login">
            <div class="login-title"><h3>Đăng nhập</h3></div>
            <div  class="login-form">
                    @using (Html.BeginForm())
                     {
                         <form>
                            <div class="login-tk">
                                <span>Tài khoản </span>
                                <input type="text" placeholder="Tên tài khoản" name="TaiKhoan" />
                               <p> @ViewData["Loi1"]</p>
                            </div>
                            <div class="login-mk">
                                <span>Mật khẩu</span>
                                <input type="password" placeholder="Mật khẩu" name="MatKhau" />
                              <p> @ViewData["Loi2"]</p>
                            </div>
                            <div class="login-submit">
                               
                                <button type="submit">Đăng nhập</button><br />
                                 <a>@Html.ActionLink("Bạn chưa có tài khoản?","DangKy","KhachHang")</a>
                                
                            </div>
                        </form>
                 }
             </div>
   
            <div class="login-notify"> <h3 style="text-align:center">@ViewBag.ThongBao</h3></div>
       
        </div>
        </div>
</body>
</html>