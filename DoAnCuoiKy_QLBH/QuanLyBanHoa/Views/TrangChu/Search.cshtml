@using QuanLyBanHoa.Models
@using PagedList.Mvc;
@model PagedList.PagedList<Hoa>
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<html>
<body>
    <h1 style="text-align: center; color: blue">@ViewBag.Ten</h1>
    <div class="row">
        @foreach (var h in Model)
        {
           <div class="col-md-4 col-md-4 col-md-4" style="padding-left: 15px "> 
                <div class="thumbnail">
                    <br />
                  <a href="@Url.Action("ChiTiet","TrangChu",new{id =h.MaHoa})">
                    <img alt="@h.TenHoa" src="~/Images/@h.HinhAnh" height="400" width="350" style="border-radius: 15px"/></a>
                  <div>
                    <h5>@h.TenHoa </h5>
                    <a style="font-size:18px;font-weight:bold;color:#0094ff">  @h.Giaban VNĐ</a><br />
                  </div>
                    <div>
                        <button type="submit" class="Chitiet" ><a href="@Url.Action("ChiTiet","TrangChu",new{ id= h.MaHoa})" >Chi tiết</a> </button>
                        <button type="submit" class="ThemGH" ><a href="@Url.Action("ThemGioHang", "Giohang", new { @sMaHoa=h.MaHoa, @strURL = Request.Url.ToString() })" >Đặt hàng </a></button>
                    </div>
              </div>
          </div>
        }
    </div>
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
    <div class="MenuTrang">
        @Html.PagedListPager(Model,page=>Url.Action("",new {page = page})) 
    </div>
</body>
</html>


